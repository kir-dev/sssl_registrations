<p id="notice"><%= notice %></p>

<h1>Regisztrációk</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th>Nickname</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Year</th>
      <th>University</th>
      <th>Group</th>
      <th>Room number</th>
      <th>Schedule</th>
      <th>Other</th>
      <th>Eula</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.name %></td>
        <td><%= registration.nickname %></td>
        <td><%= registration.email%></td>
        <td><%= registration.tel %></td>
        <td><%= registration.year %></td>
        <td><%= registration.university %></td>
        <td><%= registration.group %></td>
        <td><%= registration.room_number %></td>
        <td><%= registration.schedule.accepted_days.join ", " %></td>
        <td><%= registration.other %></td>
        <td><%= registration.eula %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Exportálás', registrations_path(format: :csv) , class: 'btn btn-primary text-white' %>
<%= link_to 'Manuális regisztráció felvétel', new_registration_path, class: 'btn btn-secondary text-white' %>
